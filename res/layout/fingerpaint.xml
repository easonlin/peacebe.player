<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" android:layout_width="fill_parent" 
    android:layout_height="fill_parent"> 
    <FrameLayout android:id="@+id/paintFrame" android:layout_width="fill_parent" 
        android:layout_height="fill_parent" android:layout_above="@id/buttonList"> 
    </FrameLayout> 
    <!-- Button 置底 --> 
    <LinearLayout android:id="@+id/buttonList" 
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:orientation="vertical" android:layout_alignParentBottom="true"> 
 
        <Button  android:id="@+id/nextButton" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:visibility="invisible"
            android:text="Done"></Button> 
        <ProgressBar
            android:id="@+id/pgbWaiting"    
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        style="?android:attr/progressBarStyle" /> 
    </LinearLayout> 
 
</RelativeLayout> 